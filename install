# Копируем bashrc zshrc
wget -qNP ~ https://rawgit.com/yarem4uk/dotfiles/master/.zshrc 
wget -qNP ~ https://rawgit.com/yarem4uk/dotfiles/master/.bashrc

#Цветной nano
yaourt -S nano-syntax-highlighting-git
#Копируем nanorc в ~/
cat /usr/share/nano-syntax-highlighting/nanorc.sample | xargs -0 echo >> 
~/.nanorc
#Переменная пути к rawgit 
export rawgit=https://github.com/yarem4uk/dotfiles/master
