### Алиасы

alias reload='source ~/.zshrc'

alias rmf='rm -rf'

alias less='vimpager'
alias zless='vimpager'

if [[ $EUID -ne 0 ]]; then 
# alias cd='cd && ls'
  alias cdd='cd ~/dotfiles'
  alias cdo='cd ~/openbox'
  alias cdl='cd ~/downloads'
  # alias cdu='cd ~/unit/web/'
# alias cda='cd ~/hexlet/js/async/'
  alias js='cd ~/hexlet/js/abp/'
  # alias sync='cd ~/hexlet/js/sync/'
  alias proto='cd ~/hexlet/js/prototypes/'
  alias config='cd ~/.config'
  # alias shop='cd ~/laravel/shop'
fi

alias cd-='cd -'
alias ..2="cd ../.."
alias ..3="cd ../../.."
alias ..4="cd ../../../.."
alias ..5="cd ../../../../.."

alias ,q='exit'
alias pdf='zathura'

# NODE
alias n='babel-node'
alias ns='nodemon --exec babel-node --'
alias nss='nodemon -q --exec babel-node --'

alias ivm='vim'
alias vi='vim'
alias rc='vim ~/dotfiles/zshrc'
alias al='vim ~/.aliases'
alias bm='vim ~/.config/bookmarks.cfg'

alias root='sudo -i'
alias df='df -h'
alias du='du -hc -d1'
alias sqlite='sqlite3'
alias ping='ping -c1 google.com'
alias phpu='phpunit'
alias x='chmod +x'
alias f='fzf'

alias grep='egrep -w --color'

alias ls='ls --color=auto --group-directories-first'
alias la='ls -A --group-directories-first'
alias lh='ls -sh --group-directories-first'
alias ll='ls -AlF --group-directories-first'
alias ld='ls -d .* --group-directories-first'

alias uninstall='pacman -Rncs'
alias install='yaourt -Sy --noconfirm'
alias pacman='sudo pacman'
alias npm='sudo npm'
alias ms='make start'

# Laravel/Lumen
# alias artisan='php artisan'

## Docker
alias start='systemctl start docker.service'
alias stop='systemctl stop docker.service'

## Git
alias gs='git status'
alias ga='git add .'
alias gcl='git clone'
alias gbr='git branch'
alias gci='git commit'
alias gco='git checkout'
alias gp='git push'
alias gl='git pull'
