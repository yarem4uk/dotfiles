### Алиасы

alias reload='source ~/.zshrc'

alias rm='rm -r'
alias cp='cp -r'
alias mkdir='mkdir -p'

alias rmf='rm -rf'
alias rv='rm -rf ~/.cache/vim/swap'

alias less='vimpager'
alias zless='vimpager'
alias mount='sudo mount'
alias umount='sudo umount'
alias usb='sudo mount /dev/sdb mnt && cd mnt'
alias wake='\a'
alias sv='sxiv'



if [[ $EUID -ne 0 ]]; then
  alias cdd="cd ~/dotfiles"
  alias cdo='cd ~/openbox'
  alias cdl='cd ~/downloads'
  alias screen='cd ~/tmp/screenshots/'
  alias config='cd ~/.config'
  alias script='cd ~/.scripts/i3'
  alias swap='cd ~/.cache/vim/swap'
  # alias usb='cd /mnt/usb'
  alias fl='cd ~/freelance'
  alias tmp='cd ~/tmp'
  alias book='cd ~/tmp/book/'
  alias wk='cd ~/work'
  alias snippet='cd ~/.config/nvim/UltiSnips'
fi

alias cd-='cd -'
alias ...="cd ../.."
alias ....="cd ../../.."
alias ..4="cd ../../../.."
alias ..5="cd ../../../../.."

alias z='zathura'
alias ydl='youtube-dl'

# NODE
alias n='npx babel-node'
alias ns='nodemon --exec babel-node --'
alias nss='nodemon -q --exec babel-node --'

alias vim='nvim'
alias ivm='nvim'
alias vi='vim'
alias rc='vim ~/dotfiles/files/zshrc'
alias al='vim ~/.aliases'
alias bm='vim ~/.config/bookmarks.cfg'

alias root='sudo -i'
alias c='cat'
alias df='df -h'
alias du='du -hc -d1'
alias sqlite='sqlite3'
alias ping='ping -c1 google.com'
alias phpu='phpunit'
alias x='chmod +x'
alias f='fzf'

alias grep='egrep -w --color'

alias la='ls -A --group-directories-first'
alias lh='ls -sh --group-directories-first'
alias ll='ls -AlFh --group-directories-first --time-style=long-iso'
alias ld='ls -d .* --group-directories-first'

alias uninstall='pacman -Rncs'
alias install='yaourt -Sy --noconfirm'
alias pacman='sudo pacman'
# alias npm='sudo npm'
alias ms='make start'

## Docker
alias start='systemctl start docker.service'
alias stop='systemctl stop docker.service'

## Git
alias gs='git status'
alias ga='git add .'
alias gc='git commit'
alias gl='git log --oneline --reverse'
alias gb='git branch'
alias gcb='git checkout -b'
alias gcm='git checkout master'

## i3
alias ci='vim ~/.config/i3/config'
